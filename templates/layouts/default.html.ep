<!DOCTYPE html>
<html lang="en">
  <head>
  
    %= include 'layouts/_headers'
    
    <!-- OTHERS -->
    <title>PERLogger v<%= config->{version} %></title>
  </head>
  <body>

  <div id="app" class="container-fluid h-100 d-flex flex-column">
      <div class="page-header row flex-shrink-0">
          <div class="-h-1 col-12 border"><h3>PERLogger</h3></div>
      </div>

      <div class="row flex-fill" style="min-height:0">

        <splitpanes class="default-theme">
          <pane size="20">
              <b-button size="sm" variant="primary" v-on:click="refreshServers" v-b-tooltip.hover title="Refresh servers list"><b-icon icon="arrow-counterclockwise"></b-icon></b-button>
              <b-button-group>
                <b-button :disabled="disableMainBtnSelAll" size="sm" variant="success" v-on:click="selectAll('All')" v-b-tooltip.hover title="Select all"><b-icon icon="list-check"></b-icon></b-button>
                <b-button :disabled="disableMainBtnSelNone" size="sm" variant="secondary" v-on:click="selectAll('None')" v-b-tooltip.hover title="Unselect all"><b-icon icon="list"></b-icon></b-button>
                <b-button :disabled="disableMainBtnSelRev" size="sm" variant="info" v-on:click="selectAll('Reverse')" v-b-tooltip.hover title="Reverse selection"><b-icon icon="arrow-repeat"></b-icon></b-button>
              </b-button-group>
              <b-button :disabled="disableMainBtnShowLog" size="sm" v-on:click="selectAll('xoxox')" v-b-tooltip.hover title="Show log files"><b-icon icon="arrow-bar-right"></b-icon></b-button>
              <b-form-group label="Select server(s):" v-slot="{ ariaDescribedby }">
                  <b-form-checkbox-group
                    v-model="selected"
                    :aria-describedby="ariaDescribedby"
                    :options="servers"
                    name="flavour-1"
                    stacked
                    id="item.id"
                  ></b-form-checkbox-group>
                </b-form-group>
            </pane>
            <pane>{{ selected }}</pane>
            <pane>3</pane>
        </splitpanes>
      </div>
      <div class="page-footer row flex-shrink-0">
        <small>
          <div class="col-12">&copy;{{ new Date().getFullYear() }} 
            <a href="https://github.com/maksudnurullaev/PERLogger">PERLogger</a> v<%= config->{version} %>, 
            <a href="https://vuejs.org/">Vue</a> v{{ vueVersion() }}
          </div>
        </small>
      </div>
  </div>
  <!-- Custom JS -->
  <script src="/main.js"></script>
  </body>
</html>
