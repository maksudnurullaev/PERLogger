<!DOCTYPE html>
<html lang="en">
  <head>
  
    %= include 'layouts/_headers'
    
    <!-- OTHERS -->
    <title>PERLogger v<%= config->{version} %></title>
  </head>
  <body>

  <div id="app" class="container-fluid h-100 d-flex flex-column">
      <div class="row flex-shrink-0">
          <div class="-h-1 col-12 border"><h3>PERLogger v<%= config->{version} %></h3></div>
      </div>
      <div class="row flex-shrink-0">
        <div class="col-2"><b-link v-on:click="refreshServers">Servers</b-link>:</div>
        <div class="col-4">Log files:</div>
        <div class="col-6">Log messages:</div>
      </div>
      <div class="row flex-fill" style="min-height:0">
          <div class="col-2 border mh-100" style="overflow-y: scroll;">
              <template v-for="(server,sname,sindex) in servers">
                <template v-if="sindex != 9">
                  <b-link >{{ sname }}</b-link><br />
                </template>
                <template v-else>
                {{ sname }}<br />
                </template>
            </template>
          </div>
          <div class="col-4 border mh-100" style="overflow-y: scroll;"> 
          </div>
          <div class="col-6 border" style="overflow-y: scroll;">Article content </div>
      </div>
      <div class="row flex-shrink-0">
          <div class="col-12">&copy; 2021 <a href="https://github.com/maksudnurullaev/PERLogger">PERLogger</a></div>
      </div>
  </div>

%= javascript begin

    var app = new Vue({
      el: '#app',
      data: {
                counter: 0,
                stopit: false,
                message: 'Hello Vue.js!',
                servers: []
            },
      methods: {
        refreshServers: function() {
            var self = this;
            axios.get('/servers/').then(
              function(response) {
                self.servers = response.data;
              }
            );
          },
      },
      beforeMount(){
        this.refreshServers()
      },
      })

% end 
  </body>
</html>
